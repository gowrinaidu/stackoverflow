
        <div class="top_links">
                <%= render "/shared/top_links" %>
        </div>
         <div  class="sub-mid-wrap" style="background:white; padding-left:300px;">
                <div style="color:red; font-weight:bold; font-size:16px;">
                       Admin sign in:
                </div>
                  <div style="height:20px;"></div>
                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                  <div style="color:green; font-weight:bold; font-size:14px;">
                         <%= f.label :email %>
                  </div>
                  <div style="height:10px;"></div>
                <div>
                        <%= f.email_field :email, :class => "text-area", :style=>"margin-left:0" %>
                         <span id="email_err" style="display:none; font-size:12px;color:#7C250D;"> Email can't be blank </span>
                  </div>
                  <div style="height:10px;"></div>

                  <div style="color:green; font-weight:bold; font-size:14px;">
                         <%= f.label :password %>
                  </div>
                  <div style="height:10px;"></div>
                  <div>
                        <%= f.password_field :password , :class => "text-area", :style=>"margin-left:0" %>
                         <span id="pwd_err" style="display:none; font-size:12px;color:#7C250D;"> Password can't be blank </span>
                  </div>
                  <div style="height:10px;"></div>
                  <% if devise_mapping.rememberable? -%>
                    <div style="color:green; font-weight:bold; font-size:14px;">
                         <%= f.check_box :remember_me %>
                         <%= f.label :remember_me %>
                  </div>
                  <% end -%>
                <div style="height:10px;"></div>
                  <div><%= f.submit "Sign in", :class=>"btn-klass", :style=>"margin-left:0"%></div>
                <% end %>
                <div style="height:20px;"></div>
                <%= render "links" %>
        </div>

